        style
            include ../../public/stylesheet/landingc.css
            include ../../public/stylesheet/sign_up.css

        title Welcome to PointsUp!
    body.land
        .arrow-up2
        div.nextright
            h1 Sign Up
        .space3
        .space1
        .cont_form
            .main
                form.formc(action="/sign_up", method="POST")
                    p #[strong Full Name:]
                    input(type="text", name="name", id="name", placeholder="Put your name here", required)
                    .space3
                    p #[strong Wisc-email address:]
                    input(type="email", name="email", id="email", placeholder="Please, use your wisc email", required)
                    .space3
                    p #[strong Password:]
                    input(type="password", name="password", id="password", placeholder="So, make a password!", required)
                    .space3
                    p.disc Just in case, your password is going to be encrypted so... If you forget your password, David won't be able to just tell what you password was. But don't worry, just contact David and let him figure out what to do.
                    .space3
                    input(type="submit", id="submitDetails", name="submitDetails", value="Submit")
